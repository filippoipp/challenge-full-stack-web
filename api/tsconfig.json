{
  "compilerOptions": {
    "target": "ES2019",
    "module": "commonjs",
    "outDir": "dist",
    "allowJs": true,
    "strict": false,
    "declaration": true,
    "esModuleInterop": true,
    "removeComments": true,
    "resolveJsonModule": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "sourceMap": true,
    "rootDirs": ["src"],
    "baseUrl": ".",
    "paths": {
    }
  },
  "include": ["**/*.ts"],
  "exclude": ["node_modules"]
}
